.post-container{
  display:flex;
  flex-direction:column;
}
.head-image{
  width:100%;
  height:500rpx;
}
.audio{
  width:102rpx;
  height:110rpx;
  position:absolute;
  left:50%;
  margin-left:-51rpx;
  top:180rpx;
  opacity:0.6;
}
.author-date{
  margin-top:20rpx;
  margin-left:30rpx;  
  flex-direction:row;
}
.author-image{
  width:64rpx;
  height:64rpx;
  vertical-align:middle;
  margin-right:10rpx;
}
.author-name{
  font-size:30rpx;
  font-weight:300;
  margin-left:20rpx;
  color:#666;
  vertical-align:middle;
}
.text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing:2px;
  margin-top:30rpx;
  margin-left:40rpx;
  color:#4b556c;
}
.tool{
  margin-top:20rpx;

}
.tool-image{
  float:right;
  margin-right:20rpx;
}
.tool-image image{
  width:90rpx;
  height:90rpx;
}
.share-image{
  margin-left:20rpx;
}
.horizon{
  height:1px;
  width:660rpx;
  margin:0 auto;
  margin-top:46rpx;
  background-color:#e5e5e5;
}
.detail{
  margin:20rpx 30rpx 0;
  color: #666;
  line-height: 44rpx;
  letter-spacing: 2px;
}